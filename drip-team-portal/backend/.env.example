# =============================================================================
# DRIP Team Portal Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in values. NEVER commit .env to git!
# Last updated: 2026-01-02

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/drip_portal

# -----------------------------------------------------------------------------
# SECURITY (Required)
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-secure-random-key-here

# -----------------------------------------------------------------------------
# AUTH0 - Authentication (Required)
# -----------------------------------------------------------------------------
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.team.drip-3d.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# -----------------------------------------------------------------------------
# GOOGLE OAUTH - Drive Integration (Required for Drive features)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://team.drip-3d.com/oauth/google/callback

# -----------------------------------------------------------------------------
# LINEAR - Project Management Integration (Optional)
# -----------------------------------------------------------------------------
LINEAR_API_KEY=lin_api_your_key_here
LINEAR_WEBHOOK_SECRET=your-webhook-secret
DRIP_TEAM_ID=team-id-from-linear
VALIDATION_PROJECT_ID=project-id-from-linear

# -----------------------------------------------------------------------------
# EXTERNAL APIs (Optional)
# -----------------------------------------------------------------------------
MATERIALS_PROJECT_API_KEY=your-materials-project-api-key

# -----------------------------------------------------------------------------
# DEVELOPMENT MODE
# -----------------------------------------------------------------------------
# Set to "true" to bypass Auth0 authentication (local dev only!)
# DEV_MODE=true
